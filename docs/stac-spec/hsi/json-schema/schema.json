{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/azavea/nasa-hyperspectral/tree/master/docs/stac/hsi/json-schema/schema.json",
  "title": "Layer Extension",
  "description": "STAC Layer Item Extension Spec",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/radiantearth/stac-spec/v1.0.0/item-spec/json-schema/item.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/stac-extensions/eo/v1.0.0/json-schema/schema.json"
    },
    {
      "$ref": "#/definitions/hsi"
    }
  ],
  "definitions": {
    "hsi": {
      "type": "object",
      "required": [
        "stac_extensions",
        "properties"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://github.com/azavea/nasa-hyperspectral/tree/master/docs/stac/hsi/json-schema/schema.json"
          }
        },
        "properties": {
          "type": "object",
          "required": [
            "hsi:wavelength_min",
            "hsi:wavelength_max"
          ],
          "properties": {
            "hsi:wavelength_min": {
              "title": "Min center wavelength",
              "type": "number"
            },
            "hsi:wavelength_max": {
              "title": "Max center wavelength",
              "type": "number"
            }
          }
        }
      }
    }
  }
}
